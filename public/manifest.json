{
    "manifest_version": 3,
    "name": "Instagram Tracker",
    "version": "1.0",
    "permissions": [
        "storage",
        "scripting",
        "alarms"
    ],
    "host_permissions": [
        "https://www.instagram.com/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; img-src * data: blob: https://*.cdninstagram.com https://*.fbcdn.net;"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Open Tracker"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.instagram.com/*"
            ],
            "js": [
                "src/content/selectors.js",
                "src/content/modules/utils.js",
                "src/content/modules/interactions.js",
                "src/content/modules/scanner.js",
                "src/content/modules/api_scanner.js",
                "src/content/index.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/content/modules/*.js"
            ],
            "matches": [
                "https://www.instagram.com/*"
            ]
        }
    ]
}